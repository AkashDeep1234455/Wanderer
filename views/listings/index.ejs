<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="favicon.ico" type="image/x-icon">  
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/css/navStyle.css">
    <link rel="stylesheet" href="/css/footerStyle.css">
    <link rel="stylesheet" href="/css/style.css"> 
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400..700;1,400..700&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Wanderer</title>
</head>
<body>
    <header>
    <%- include("../includes/navBar.ejs")-%>
    </header>
    <%- include("../flash/flash.ejs") -%>
    <div id="filters">
        <div class="filter">
            <i class="fa-solid fa-fire"></i>
            Trending
        </div>
        <div class="filter">
            <i class="fa-solid fa-bed"></i>
            Rooms
        </div>
        <div class="filter">
            <i class="fa-solid fa-person-swimming"></i>
            Pools
        </div>
        <div class="filter">
            <i class="fa-solid fa-umbrella-beach"></i>
            Beach
        </div>
        <div class="filter">
            <i class="fa-solid fa-mountain"></i>
            Mountains
        </div>
        <div class="filter">
            <i class="fa-solid fa-rocket"></i>
            OMG!
        </div>
        <div class="filter">
            <i class="fa-regular fa-chess-rook"></i>
            Castles
        </div>
        <div class="filter">
            <i class="fa-solid fa-horse"></i>
            Farm
        </div>
        <div class="filter">
            <i class="fa-solid fa-campground"></i>
            Camping!
        </div>
        <div class="filter">
            <i class="fa-solid fa-person-skiing"></i>
            skii
        </div>
        <div class="filter">
            <i class="fa-solid fa-snowflake"></i>
            Snowfall
        </div>
        <div class="tax-toggle">     
            <div class="form-check-reverse form-switch">
                <label for="flexSwitchCheckDefault">Display total before taxes</label>
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            </div>
           </div> 
    </div>
    <ul>
    <%for(let listing of allListings){%>
        <li>
            <a href="/listings/<%=listing.id%>" class="link">
                <img src="data:image/png;base64, <%= listing.image.data.toString('base64') %>" alt="property image">
                <div class="data">
                    <p class="title"><%=listing.title%></p>
                    <p class="description"><%=listing.description%></p>
                    <p class="price">&#8377;<%=listing.price.toLocaleString("en-IN")%> /per night
                        <i class="taxinfo"> &nbsp;&nbsp;+18% GST</i>
                    </p>
                </div>
            </a>
        </li>
    <%}%>
    </ul>
    
    <%- include("../includes/footer.ejs")-%>


    <script src="/Js/box-appear.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>


    <script>
        let taxSwitch = document.getElementById("flexSwitchCheckDefault");
        let taxinfo = document.getElementsByClassName("taxinfo");
        taxSwitch.addEventListener("click",()=>{
           for(let i=0;i<taxinfo.length;i++){
            if(taxinfo[i].style.display === "inline"){
                taxinfo[i].style.display="none";
            }else{
            taxinfo[i].style.display = "inline";
            }
           }
        })
    </script>
</body>
</html>